---
import AnimatedWrapper from "./AnimatedWrapper.astro";
import Review from "./Review.astro";
const { reviews } = Astro.props;

type Review = {
  title: string;
  content: string;
  signature: string;
};
---

  <section
    class="
        text-primary-dark
        p-8"
  >
    <div class="title">
      <AnimatedWrapper>
        <h2 class="text-4xl font-bold">Reviews</h2>
      </AnimatedWrapper>
    </div>
    <div class="grid grid-flow-row">
      {
        reviews.map((r: Review) => (
          <Review review={r} />
        ))
      }
    </div>
  </section>
