---
import Layout from "../layouts/Layout.astro";
import AnimatedWrapper from "../components/AnimatedWrapper.astro";
import ContactForm from "../components/ContactForm.astro";
import MainContent from "../components/MainContent.astro";
---

<Layout title="Contact">
  <MainContent class="max-w-4xl mx-auto px-4 pt-8 pb-8">
    <AnimatedWrapper>
      <h1 class="text-4xl text-primary-dark font-bold text-center mb-12">
        Contact Us
      </h1>
    </AnimatedWrapper>

    <div class="max-w-lg mx-auto">
      <AnimatedWrapper>
        <div class="space-y-3 mb-8">
          <p class="text-primary-dark text-center">
            Have a question about our services or would like a quote?
            <br />
            We'd love to hear from you!
          </p>
          <p class="text-primary-dark text-center">
            Fill out the form below and we'll get back to you as soon as
            possible.
          </p>
        </div>
        <ContactForm />
      </AnimatedWrapper>
    </div>
    <AnimatedWrapper>
      <div class="max-w-48 mx-auto mt-12 mb-12 space-y-1">
        <p class="font-bold">Sedco Contracting LLC</p>
        <p>80 Ames Ave</p>
        <p>Rutherford, NJ 07070</p>
        <p>office: 201-460-9422</p>
        <p>cell: 201-566-1496</p>
      </div>
    </AnimatedWrapper>
  </MainContent>
</Layout>
